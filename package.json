{
  "name": "apibase",
  "version": "1.0.0",
  "description": "RESTful API",
  "main": "server.ts",
  "repository": "https://github.com/akiosTerr/apibase.git",
  "author": "akiosterr",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "sucrase-node src/app.ts",
    "dev": "nodemon src/index.ts",
    "prod": "node dist/bundle.min.js",
    "build": "tsc && yarn minify",
    "minify": "uglifyjs --compress --mangle --output dist/bundle.min.js -- dist/index.js",
    "esbuild": "esbuild --bundle --minify --loader=ts --platform=node <src/index.ts> dist/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongoose": "^5.9.16"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "esbuild": "^0.4.3",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "sucrase": "^3.15.0",
    "typescript": "^3.9.3",
    "uglify-js": "^3.9.4"
  }
}
